@using KursavayaECS.Models
@using KursavayaECS.Data
@using KursavayaECS.AppServices
@using Microsoft.EntityFrameworkCore;
@model IndexApproveModel

<div class="card" style="width: 30rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Имя - @Model.FirstName</li>
        <li class="list-group-item">Фамилия - @Model.LastName</li>
        <li class="list-group-item">Телефон - @Model.Phone</li>
        <li class="list-group-item">Дата рождения - @Model.BirthDate</li>
    </ul>
</div>
<div>
    <a class="btn btn-info btn-sm" style="margin: 0.2em" asp-action="ApproveTeacher">Подтвердить аккаунт преподавателя</a>
</div>
<div>
    <a class="btn btn-info btn-sm" style="margin: 0.2em" asp-action="ApproveStudent">Подтвердить аккаунт студента</a>
</div>